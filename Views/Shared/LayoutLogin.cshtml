<body>
    <div class="app">

     

        <div class="app__container">
            <div class="grid wide">
                @RenderBody()

            </div>
        </div>

    </div>

    <!-- Login form  -->
    <div class="modal" id="openFormDangNhap">
        <div class="modal__overlay"></div>
        <div class="modal__body">
            <div class="auth-form">
                <div class="auth-form__container">
                    <div class="auth-form__header">
                        <h3 class="auth-form__heading">Login</h3>
                        <span class="auth-form__switch-btn btn-dang-ki-open">Register</span>
                    </div>

                    <div class="auth-form__form">
                        <div class="auth-form__group">
                            <input type="text" class="auth-form__input account-dangnhap" placeholder="Email">
                        </div>
                        <div class="auth-form__group">
                            <input type="password" class="auth-form__input password-dangnhap" placeholder="Password ">
                        </div>
                    </div>

                    <div class="auth-form__aside">
                        <div class="auth-form__help">
                            <a href="" class="auth-form__link auth-form__help-forgot">Forgot password</a>
                            <span class="auth-form__help--separate"></span>
                            <a href="" class="auth-form__link ">Help?</a>
                        </div>
                    </div>

                    <div class="auth-form__controls">
                        <button class="btn btn--normal auth-form__controls-back">Back</button>
                        <button class="btn btn--primary btn-dangnhap">Login</button>
                    </div>
                </div>

                <div class="auth-form__socials">
                    <a class=" auth-form__socials--facebook btn btn--size-s btn--with-icon">
                        <i class=" auth-form__socials-icon fab fa-facebook-square"></i>
                        <span class="auth-form__socials-title">Connect with Facebook</span>
                    </a>
                    <a class="auth-form__socials--google btn btn--size-s btn--with-icon">
                        <i class="auth-form__socials-icon fab fa-google"></i>
                        <span class="auth-form__socials-title">Connect with Google</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal layout  -->
    <div class="modal" id="openFormDangKi">
        <div class="modal__overlay"></div>
        <div class="modal__body">
            <!-- Register form  -->
            <div class="auth-form">
                <div class="auth-form__container">
                    <div class="auth-form__header">
                        <h3 class="auth-form__heading">Register</h3>
                        <span class="auth-form__switch-btn btn-dang-nhap-open">Login</span>
                    </div>

                    <div class="auth-form__form">
                        <div class="auth-form__group">
                            <input type="text" class="auth-form__input" placeholder="Email ">
                        </div>
                        <div class="auth-form__group">
                            <input type="password" class="auth-form__input" placeholder="Password ">
                        </div>
                        <div class="auth-form__group">
                            <input type="password" class="auth-form__input" placeholder="Re-enter password">
                        </div>
                    </div>

                    <div class="auth-form__aside">
                        <p class="auth-form__policy-text">
                            By signing up, you agree to Lotte about
                            <a href="" class="auth-form__text-link">Terms of Service</a> &
                            <a href="" class="auth-form__text-link">Privacy Policy</a>
                        </p>
                    </div>

                    <div class="auth-form__controls">
                        <button class="btn btn--normal auth-form__controls-back">Back</button>
                        <button class="btn btn--primary">Register</button>
                    </div>
                </div>

                <div class="auth-form__socials">
                    <a class=" auth-form__socials--facebook btn btn--size-s btn--with-icon">
                        <i class=" auth-form__socials-icon fab fa-facebook-square"></i>
                        <span class="auth-form__socials-title">Connect with Facebook</span>
                    </a>
                    <a class="auth-form__socials--google btn btn--size-s btn--with-icon">
                        <i class="auth-form__socials-icon fab fa-google"></i>
                        <span class="auth-form__socials-title">Connect with Google</span>
                    </a>
                </div>
            </div>
        </div>
