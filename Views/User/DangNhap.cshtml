
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@if (ViewBag.error != "")
{
    <h2 class="text-center text-danger" style="font-size : 1.5rem">@ViewBag.error</h2>
}

<!--
Author: W3layouts
