@model BaiTapLon_Web.Models.Entities.PhongChieu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Danh mục phòng chiếu</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            @*@Html.ActionLink("Create New", "Create", "Phim")*@
                            <button class="btn btn-sm btn-danger" type="submit" name="Delete"><i class="fas fa-trash"></i></button>
                            <a href="@Url.Action("Index", "PhongChieu")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left" s></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th style="width:250px">Tên trường</th>
                            <th>Nội dung</th>
                        </tr>

                        <tr>
                            <td>Mã rạp</td>
                            <td>@Html.DisplayFor(model => model.MaRap)</td>
                        </tr>

                        <tr>
                            <td>Tên Phòng</td>
                            <td>@Html.DisplayFor(model => model.TenPhong)</td>
                        </tr>

                        <tr>
                            <td>Tổng ghế</td>
                            <td>@Html.DisplayFor(model => model.TongGhe)</td>
                        </tr>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}

