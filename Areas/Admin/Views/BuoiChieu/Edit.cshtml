@model BaiTapLon_Web.Models.Entities.BuoiChieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Ten</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            @*@Html.ActionLink("Create New", "Create", "Phim")*@
                            <button class="btn btn-sm btn-success" type="submit" name="edit"><i class="fas fa-save"></i></button>
                            <a href="@Url.Action("Index", "BuoiChieu")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left" s></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">


                    <div class="row">
                        <div class=" col-md-7">
                            <div class="form-group">
                                <label>Mã buổi chiếu<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.MaBuoiChieu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaBuoiChieu, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Tên phim<span class="text-danger">(*)</span></label>
                                @Html.DropDownList("MaPhim", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaPhim, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Tên rạp<span class="text-danger">(*)</span></label>
                                @Html.DropDownList("MaRap", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaRap, "", new { @class = "text-danger" })

                            </div>
                            

                            <div class="form-group">
                                <label>Tên rạp<span class="text-danger">(*)</span></label>
                                @Html.DropDownList("MaPhong", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class=" col-md-5">

                            <div class="form-group">
                                <label>Ngày chiếu<span class="text-danger">(*)</span></label>
                                @{
                                    DateTime ngayHienTai = DateTime.Now;
                                    <input type="date" name="NgayChieu" value="@ngayHienTai.ToString("yyyyy-MM-dd")" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.NgayChieu, "", new { @class = "text-danger" })
                                   
                                }
                                @* @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control" } })*@

                            </div>

                            <div class="form-group">
                                <label>Giờ chiếu <span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.GioChieu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GioChieu, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Giá vé<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.GiaVe, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GiaVe, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div>
                    
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
<script src="~/Public/dist/js/RoomID.js"></script>



