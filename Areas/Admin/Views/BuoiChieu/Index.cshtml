@model IEnumerable<BaiTapLon_Web.Models.Entities.BuoiChieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Danh mục buổi chiếu</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        @*@Html.ActionLink("Create New", "Create", "Phim")*@
                        <a href="@Url.Action("Create","BuoiChieu")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>
                            Mã Buổi Chiếu
                        </th>
                        <th>
                            Tên phim
                        </th>
                        <th>
                            Mã rạp
                        </th>
                        <th>
                            Tên rạp
                        </th>
                        <th>
                            Ngày chiếu
                        </th>
                        <th>
                            Giờ chiếu
                        </th>
                        <th>
                            Giá vé
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaBuoiChieu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phim.TenPhim)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhongChieu.MaRap)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RapPhim.TenRap)
                            </td>
                            @{
                                string NgayKhoiChieuStr = item.NgayChieu.ToString().Split(' ')[0]; //loại bỏ phần time đằng sau
                                <td>
                                    @NgayKhoiChieuStr
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.GioChieu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaVe)
                            </td>
                            <td>
                                <a href="~/Admin/BuoiChieu/Edit/@item.MaBuoiChieu" class="btn btn-sm btn-success">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Admin/BuoiChieu/Details/@item.MaBuoiChieu" class="btn btn-sm btn-info">
                                    <i class="fa fa-info-circle"></i>
                                </a>
                                <a href="~/Admin/BuoiChieu/Delete/@item.MaBuoiChieu" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                            </tr>
                        }

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

